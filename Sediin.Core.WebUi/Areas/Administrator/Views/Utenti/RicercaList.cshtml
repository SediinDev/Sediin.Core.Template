@model Sediin.Core.WebUi.Areas.Administrator.Models.UtentiVM


@if (Model.TotalRecords == 0)
{
    <div class="alert alert-warning">Nessun record trovato</div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
            <thead>
                <tr class="text-center table-info">
                    <th>Nome</th>
                    <th>Cognome</th>
                    <th>Email</th>
                    <th style="width:100px;"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Result)
                {
                    <tr>
                        <td>@item.Nome</td>
                        <td>@item.Cognome</td>
                        <td>@item.Email</td>
                        <td>

                            <div class="dropdown">
                                <button class="btn btn-primary btn-sm dropdown-toggle w-100" type="button" 
                                data-bs-toggle="dropdown" aria-expanded="false">
                                    Azioni
                                </button>
                                <ul class="dropdown-menu">
                                    <li>

                                        <a class="dropdown-item" data-ajax="true"
                                           data-ajax-begin="alertWaid()"
                                           data-ajax-failure="handleError"
                                           data-ajax-success="showModalFullScreen('Modifica utente', data); alertClose()"
                                           href="@Url.Action("ModificaUtente", "Utenti", new { item.Id })">
                                            Modifica utente
                                        </a>

                                    </li>
                                    <li>

                                        <a class="dropdown-item" href="#">Elimina utente</a>

                                    </li>
                                    <li><a class="dropdown-item" href="#">Blocca utente</a></li>
                                </ul>
                            </div>
                           
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <paging-ajax page-size="@Model.PageSize"
                 page-index="@Model.CurrentPage"
                 total-rows="@Model.TotalRecords"
                 action="@Url.Action("Ricerca", "Utenti")"
                 action-export="@Url.Action("RicercaExcel", "Utenti")"
                 query-model="@Model.Filtri"
                 update-target-id="resultRicerca"
                 http-method="Post">
    </paging-ajax>


}
